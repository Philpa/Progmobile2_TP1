<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csf.philb.progmobile2_tp1.MainActivity">

    <TextView
        android:text="@string/text_whats_this_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvWhatColor"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.04000002"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="102dp"
        android:layout_height="105dp"
        app:srcCompat="@drawable/circle"
        android:id="@+id/imgvColorPreview"
        android:adjustViewBounds="false"
        android:background="@drawable/circle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvWhatColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="@+id/txtvWhatColor"
        app:layout_constraintLeft_toLeftOf="@+id/txtvWhatColor"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvColor1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgvColorPreview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="@+id/imgvColorPreview"
        app:layout_constraintLeft_toLeftOf="@+id/imgvColorPreview"
        app:layout_constraintVertical_bias="0.13"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvColor2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvColor1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.060000002"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@+id/txtvColor1"
        app:layout_constraintLeft_toLeftOf="@+id/txtvColor1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvColor3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintRight_toRightOf="@+id/txtvColor1"
        app:layout_constraintLeft_toLeftOf="@+id/txtvColor1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvColor2"
        app:layout_constraintVertical_bias="0.13"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvColor4"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintRight_toRightOf="@+id/txtvColor1"
        app:layout_constraintLeft_toLeftOf="@+id/txtvColor1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvColor3"
        app:layout_constraintVertical_bias="0.19"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white" />

</android.support.constraint.ConstraintLayout>
