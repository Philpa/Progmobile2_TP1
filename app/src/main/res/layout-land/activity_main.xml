<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csf.philb.progmobile2_tp1.MainActivity">

    <TextView
        android:text="What's this color ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvWhatColor"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.19"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintRight_toLeftOf="@+id/guideline3" />

    <ImageView
        android:layout_width="102dp"
        android:layout_height="105dp"
        app:srcCompat="@drawable/circle"
        android:id="@+id/imgvColorPreview"
        android:adjustViewBounds="false"
        android:background="@drawable/circle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvWhatColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtvWhatColor"
        app:layout_constraintRight_toRightOf="@+id/txtvWhatColor" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvColor1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.13"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvColor2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/txtvColor3"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        app:layout_constraintLeft_toLeftOf="@+id/txtvColor1"
        app:layout_constraintRight_toRightOf="@+id/txtvColor1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvColor3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="@+id/txtvColor1"
        app:layout_constraintRight_toRightOf="@+id/txtvColor1"
        app:layout_constraintBottom_toTopOf="@+id/txtvColor4"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvColor4"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintRight_toRightOf="@+id/txtvColor1"
        app:layout_constraintLeft_toLeftOf="@+id/txtvColor1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvColor1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.89" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="298dp"
        app:layout_constraintGuide_percent="0.5033784" />

</android.support.constraint.ConstraintLayout>
